<%- include('../../partials/header.ejs') %> 
<body>
    <%- include('../../partials/navbar.ejs') %>
    <div class="container"><hr>
        <div class="card">
            <div class="card-header">
                <h2>Editar Artigo</h2>
            </div>
            <div class="card-body">
                <form method="POST" action="/articles/update">
                    <input type="hidden" value="<%= article.id %>" name="id">
                    <input class="form-control" type="text" name="title" placeholder="Defina o TÃ­tulo do artigo" value="<%= article.title %>"><br>
                    <!--<textarea name="body"class="form-control" id="article"placeholder="Escreva seu artigo aqui!"></textarea><br>-->
                    <textarea name="body" id="article" class="form-control" placeholder="Escreva seu artigo aqui!"><%= article.body %></textarea><br>
                    <select name="category" class="form-control">
                        <%categories.forEach(category => { %>
                            <% if(category.id == article.categoryId) { %>
                                <option value="<%=category.id%>" selected ><%=category.title %></option>
                            <% } else { %>  
                                <option value="<%=category.id%>"><%=category.title %></option>
                            <% } %>  
                        <% }) %>
                    </select><br>
                    <button class="btn btn-dark">Atualizar</button>
                </form>
            </div>    
        </div>
    </div> 
</body>
<%- include('../../partials/footer.ejs') %> 

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector:'#article',
        language:'pt_BR',
        plugins: [
            'advlist autolink link image imagetools autoresize lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
        ]      
    });
</script>